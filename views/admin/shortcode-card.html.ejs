<div class="card">
  <div class="card-header">
    <a class="card-title" href="<%=appVars.root%>/admin/shortcodes/<%=shortcode._key%>">
      /<%=shortcode._key%>
    </a>
  </div>
  <div class="card-body">
    <dl class="m-0">
      <dt>Redirect</dt>
      <dd><pre class="text-wrap"><%=shortcode.redirect%></pre></dd>
      <dt>Status</dt>
      <dd><pre class="text-wrap"><%=shortcode.status%></pre></dd>
    </dl>
  </div>
  <div class="card-footer text-end">
    <form action="<%=appVars.root%>/admin/api/shortcodes/<%=shortcode._key%>" method="delete" data-delete-shortcode>
      <button type="submit" class="btn btn-sm btn-danger">
        Delete
      </button>
    </form>
  </div>
</div>
